<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="my.com.exerciselogger" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="my.com.exerciselogger.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="my.com.exerciselogger.GraphActivity"
            android:label="@string/title_activity_graph"
            android:parentActivityName="my.com.exerciselogger.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.com.exerciselogger.MainActivity" />
        </activity>
        <activity
            android:name="my.com.exerciselogger.CalendarActivity"
            android:label="@string/title_activity_calendar"
            android:parentActivityName="my.com.exerciselogger.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="my.com.exerciselogger.MainActivity" />
        </activity>
        <activity
            android:name="my.com.exerciselogger.DayActivity"
            android:label="@string/title_activity_day" >
        </activity>
        <activity
            android:name="my.com.exerciselogger.AlarmManagerActivity"
            android:label="@string/title_activity_alarm_manager" >
        </activity>
    </application>

</manifest>